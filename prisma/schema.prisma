generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id              String         @id @default(cuid())
  name            String

  // âœ… Newly required for your UI
  licenseNumber   String?        // e.g., "KL57..."
  phone           String?
  joinDate        DateTime?
  profileImageUrl String?

  hidden          Boolean        @default(false)
  removedAt       DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  weeklyEntries   WeeklyEntry[]
}


/// Maps to existing table "WeeklyEarning" (no DB rename required)
model WeeklyEntry {
  id        Int      @id @default(autoincrement())
  driverId  String
  weekStart DateTime @map("weekStartDate")
  weekEnd   DateTime @map("weekEndDate")
  earnings  Decimal  @map("earningsInINR") @db.Decimal(12, 2)
  trips     Int      @map("tripsCompleted")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  driver Driver @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@unique([driverId, weekStart])
  @@index([weekStart])
  @@map("WeeklyEarning")
}
